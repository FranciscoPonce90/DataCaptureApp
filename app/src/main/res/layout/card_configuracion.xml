<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="150dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:background="#2ECCFA">
            
            <TextView
                android:id="@+id/nombre_config"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/nombre_config"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/figura_config"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="@string/figura_config"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                tools:ignore="NestedWeights"
                android:gravity="center"/>

            <TextView
                android:id="@+id/ruta_config"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="@string/ruta_config"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                tools:ignore="NestedWeights"
                android:gravity="center"/>

            <TextView
                android:id="@+id/desaparece_config"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="@string/desaparece_config"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                tools:ignore="NestedWeights"
                android:gravity="center"/>

            <View
                android:id="@+id/linea_config"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffd5d5d5">

            </View>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>